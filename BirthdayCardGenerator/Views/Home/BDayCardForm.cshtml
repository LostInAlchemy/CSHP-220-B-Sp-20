@model BirthdayCardGenerator.Models.SenderInfo

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BDayCardForm</title>
    <link rel="stylesheet" type="text/css" href="~/css/Style.css" />
</head>



<body>
    <h1>Birthday Card Generator</h1>
    <hr />
    <h2>Send a Birthday Card</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="BDayCardForm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="From": class="control-label"></label>
                    <input asp-for="From" class="form-control" />
                    <span asp-validation-for="From" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="To" class="control-label"></label>
                    <input asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" style="background:lightyellow" />
                    <span asp-validation-for="Message" class="text-danger" ></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send Card" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <h3>©2020 - My ASP.NET Application</h3>

</body>
</html>